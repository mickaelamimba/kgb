{% extends 'baseLogin.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}

    <div class="form-wrapper">
        <form class="login-form" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que{{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
                <div class="titel">
                    <h1 class=" titel">Connection</h1>
                </div>

            <div class="form-groups">

                <input type="email" placeholder="Email" value="{{ last_username }}" name="email" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-groups">

                <input type="password" name="password"  placeholder="Mots de pass" class="form-control" autocomplete="current-password" required>
            </div>



            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div class="button-groups">
                <button class="btn btn-lg btn-primary" type="submit">
                    S'identifier
                </button>

                {% if app.environment == "dev" %}
                    <button><a href="{{ path('app_register') }}">S'inscrire</a></button>
                {% endif %}

            </div>

        </form>

    </div>


{% endblock %}
